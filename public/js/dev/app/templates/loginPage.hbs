<div id="loginPage">
	<form role="form" action="/api/auth/login" method="POST">
			<h2>Login</h2>
			<div class="form-group">
				<label for="username-txt">Nombre de Usuario:</label>
				<input type="text" class="form-control" id="username-txt" name="username" placeholder="nombre de usuario">
			</div>
			<div class="form-group">
				<label for="password-txt">Contraseña:</label>
				<input type="password" class="form-control" id="password-txt" name="password" placeholder="contraseña">
			</div>
			<input type="submit" value="submit" class="btn btn-success" id="submitButton">
		</form>
</div>