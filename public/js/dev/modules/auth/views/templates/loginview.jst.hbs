<form role="form" action="/api/auth/login" method="POST" class="col-md-6 col-md-offset-3">
	<h2>Login</h2>
	<div class="form-group username">
		<label for="username-txt">Nombre de Usuario:</label>
		<input data-field="username" type="text" class="form-control" id="username-txt" name="username" placeholder="nombre de usuario">
	</div>
	<div class="form-group password">
		<label for="password-txt">Contraseña:</label>
		<input data-field="password" type="password" class="form-control" id="password-txt" name="password" placeholder="contraseña">
	</div>
	<input type="submit" value="submit" class="btn btn-success" id="submitButton">
</form>

